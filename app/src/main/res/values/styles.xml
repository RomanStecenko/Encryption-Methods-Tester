<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ProcessButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="pb_colorComplete">@color/green_complete</item>
        <item name="pb_colorNormal">@color/blue_normal</item>
        <item name="pb_colorPressed">@color/blue_pressed</item>
        <item name="pb_colorProgress">@color/purple_progress</item>
        <item name="pb_textComplete">@string/show_results</item>
        <item name="pb_textProgress">@string/test_started</item>
        <item name="pb_textError">@string/error</item>
        <item name="pb_colorError">@color/red_error</item>
    </style>

</resources>
